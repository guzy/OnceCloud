html, body {
	height: 100%;
	overflow: hidden;
}
.login-body {
	position: relative;
	height: 100%;
	overflow: hidden;
	font-family: "Microsoft Yahei","微软雅黑",Tahoma,Helvetica,Arial,sans-serif;
	font-size: 12px;
	line-height: 16px;
	color: #333;
	background-image: url(../img/bg.png);
	background-repeat: no-repeat;
	background-position: center center;
	margin: 0;
}
.home {
	position: relative;
	top: 50%;
	margin: -250px auto 0 auto;
}
.home .logo {
	background-image: url(../img/logo.png);
	background-repeat: no-repeat;
	background-position: center center;
	height: 79px;
}
.home .login-box {
	padding: 20px 0 40px;
}
.login-box .login-form {
	width: 274px;
	margin: 0 auto;
}
.login-form .login-input {
	width: 274px;
	margin: 0;
	padding: 10px 15px;
	font-size: 16px;
	border: 2px solid #ccc;
	background: #fff;
	-webkit-appearance: none;
	line-height: 16px;
	color: #555;
	vertical-align: middle;
	border-radius: 0;
	display: inline-block;
}
.login-form .btn-primary {
	width: 274px;
	margin: 0;
	padding: 10px 15px;
	font-size: 16px;
	color: #fff;
	background: #1f90c8;
	border-bottom-color: #1c82b4;
	text-shadow: none;
	border-radius: 0;
}
.login-form a, a:hover {
	color: #08c;
	text-decoration: none;
}
.home .footer {
	padding: 20px;
	text-align: center;
}
.footer a {
	color: #bbb;
	text-decoration: none;
}
.ver-change {
	text-decoration: none;
	font-size: 14px;
	margin-left: 6px;
	cursor: pointer;
}
.help-inline {
	display: inline-block;
	padding: 0 10px;
	line-height: 32px;
	margin: 0 8px;
}
.error-message {
	color: #b94a48;
	background: #f2dede;
}
